{% extends "layout.html.twig" %}
{% set title = 'Evaluatie' %}
{% block content %}
    <div class="container no-padding">
        <div class="content">
            <p>{{workshop.workshop_nr ? (workshop.workshop_nr ~ '.') : ''}} {{workshop.title | raw}}</p>

            <form class="" action="/workshop/{{ workshop_id }}/evaluatie/vote" enctype="multipart/form-data" method="post" name="form">

                    <div class="evaluatie-row container">

                        <span class="rating">
                           <span class="block"><strong>{{ questions.stelling_1 }}</strong></span>
                           <span class="wrapper">
                           {% for i in 1..5 %}
                              <input type="radio" class="rating-input" name="answer_1" id="rating-input-1-{{i}}" value="{{i}}" />
                              <label for="rating-input-1-{{i}}" class="rating-star"></label>
                           {% endfor %}
                           <span>
                        </span>
                    </div>



                    <div class="evaluatie-row container">
                       <span class="rating">

                          <span class="block"><strong>{{ questions.stelling_2 }}</strong></span>
                          <span class="wrapper">
                          {% for i in 1..5 %}
                             <input type="radio" class="rating-input" name="answer_2" id="rating-input-2-{{i}}" value="{{i}}" />
                             <label for="rating-input-2-{{i}}" class="rating-star"></label>
                          {% endfor %}
                          <span>
                       </span>
                    </div>

                <div class="evaluatie-row container">
                       <span class="rating">

                          <span class="block"><strong>{{ questions.stelling_4 }}</strong></span>
                          <span class="wrapper">
                          {% for i in 1..5 %}
                              <input type="radio" class="rating-input" name="answer_4" id="rating-input-4-{{i}}" value="{{i}}" />
                              <label for="rating-input-4-{{i}}" class="rating-star"></label>
                          {% endfor %}
                              <span>
                       </span>
                </div>


                    <div class="evaluatie-row container">
                       <span class="rating">

                          <span class="block"><strong>{{ questions.stelling_3 }}</strong></span>
                          <span class="wrapper">
                          {% for i in 1..5 %}
                             <input type="radio" class="rating-input" name="answer_3" id="rating-input-3-{{i}}" value="{{i}}" />
                             <label for="rating-input-3-{{i}}" class="rating-star"></label>
                          {% endfor %}
                          <span>
                       </span>
                    </div>

                   <div class="evaluatie-row container">
                        <span class="block"><strong>{{ questions.open }}</strong></span>
                        <div>
                            <textarea name="comments" id="comments"></textarea>
                        </div>
                    </div>

                <div class="tcenter"><button type="submit" class="btn">Bevestig antwoord</button></div>
            </form>

        </div>
    </div>
{% endblock %}
